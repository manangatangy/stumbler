<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:orientation="horizontal" >
    <LinearLayout 
        android:id="@+id/leftLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
	    android:orientation="vertical" >
	    <ImageView 
	        android:id="@+id/iconImage"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	    <TextView 
	        android:id="@+id/textViewModeN"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="LocSim"
	        android:textSize="10sp"
	        android:gravity="center_horizontal|bottom"
	        style="@style/NotificationTitle" />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/rightLayout"
	    android:layout_width="0dip"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:orientation="vertical" >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        <TextView 
	            android:id="@+id/textViewStateN"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.02"
	            android:text="DISCONNECTED"
	            android:paddingLeft="10dip"
	            android:gravity="left" 
	            android:textStyle="bold"
	            android:textSize="11dip" />
	        <TextView
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.01"
	            android:text="elapsed"
	            android:gravity="left"
	            android:paddingLeft="10dip"
	            android:textStyle="bold"
	            android:textSize="11dip" />
	        <TextView
	            android:id="@+id/textViewElapsedN"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.01"
	            android:gravity="right"
	            android:paddingRight="10dip"
	            android:text="00:10:30"
	            android:textStyle="bold"
	            android:textSize="11dip" />
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/layoutActions2"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:orientation="horizontal" >
	        <ImageView
	            android:id="@+id/imageViewSlowerN"
	            android:layout_width="0dip"
	            android:layout_weight="0.01"
	            android:layout_height="match_parent"
	            android:src="@drawable/ic_menu_tran_slower" />
	        <ImageView
	            android:id="@+id/imageViewStartN"
	            android:layout_width="0dip"
	            android:layout_weight="0.01"
	            android:layout_height="match_parent"
	            android:src="@drawable/ic_menu_tran_start" />
	        <ImageView
	            android:id="@+id/imageViewPauseN"
	            android:layout_width="0dip"
	            android:layout_weight="0.01"
	            android:layout_height="match_parent"
	            android:src="@drawable/ic_menu_tran_pause" />
	        <ImageView
	            android:id="@+id/imageViewStopN"
	            android:layout_width="0dip"
	            android:layout_weight="0.01"
	            android:layout_height="match_parent"
	            android:src="@drawable/ic_menu_tran_stop" />
	        <ImageView
	            android:id="@+id/imageViewFasterN"
	            android:layout_width="0dip"
	            android:layout_weight="0.01"
	            android:layout_height="match_parent"
	            android:src="@drawable/ic_menu_tran_faster" />
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/layoutCountAndDistance"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        <TextView
	            android:id="@+id/textViewCountN"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.02"
	            android:text="10000"
	            android:gravity="right" 
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	        <TextView
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.02"
	            android:text="points"
	            android:paddingLeft="10dip"
	            android:gravity="left" 
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	        <TextView
	            android:id="@+id/textViewDistanceN"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.02"
	            android:text="2340011"
	            android:gravity="right"
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	        <TextView
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.02"
	            android:gravity="left"
	            android:paddingLeft="10dip"
	            android:text="metres"
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	    </LinearLayout>
    </LinearLayout>
</LinearLayout>
