<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:orientation="horizontal"
        android:background="@android:color/darker_gray"
        android:gravity="center" >

	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:scaleType="fitCenter"
	        android:src="@drawable/fake_gps" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewState"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:text="REPLAYING"
            android:paddingLeft="10dip"
            android:gravity="left" 
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:text="elapsed"
            android:gravity="left"
            android:paddingLeft="10dip"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/textViewElapsed"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:gravity="right"
            android:paddingRight="10dip"
            android:text="00:10:30"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutActions2"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:orientation="horizontal" >
        
        <ImageButton
            android:id="@+id/imageButtonSlower"
            android:layout_width="0dip"
            android:layout_weight="0.01"
            android:layout_height="match_parent"
            android:src="@drawable/ic_menu_tran_slower" />

        <ImageButton
            android:id="@+id/imageButtonStart"
            android:layout_width="0dip"
            android:layout_weight="0.01"
            android:layout_height="match_parent"
            android:src="@drawable/ic_menu_tran_start" />

        <ImageButton
            android:id="@+id/imageButtonPause"
            android:layout_width="0dip"
            android:layout_weight="0.01"
            android:layout_height="match_parent"
            android:src="@drawable/ic_menu_tran_pause" />
        
        <ImageButton
            android:id="@+id/imageButtonStop"
            android:layout_width="0dip"
            android:layout_weight="0.01"
            android:layout_height="match_parent"
            android:src="@drawable/ic_menu_tran_stop" />

        <ImageButton
            android:id="@+id/imageButtonFaster"
            android:layout_width="0dip"
            android:layout_weight="0.01"
            android:layout_height="match_parent"
            android:src="@drawable/ic_menu_tran_faster" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutActions1"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonRecord"
            android:layout_width="0dip"
            android:layout_weight="0.01"
            android:layout_height="match_parent"
			android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="RECORD" />

        <Button
            android:id="@+id/buttonPlayback"
            android:layout_width="0dip"
            android:layout_weight="0.01"
            android:layout_height="match_parent"
			android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="PLAYBACK" />

        <Button
            android:id="@+id/buttonRemote"
            android:layout_width="0dip"
            android:layout_weight="0.01"
            android:layout_height="match_parent"
			android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="REMOTE" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layoutCountAndDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewCount"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:text="10000"
            android:gravity="right" 
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:text="points"
            android:paddingLeft="10dip"
            android:gravity="left" 
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewDistance"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:text="2340011"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:gravity="left"
            android:paddingLeft="10dip"
            android:text="metres"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dip" >
    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/layoutModeAndFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewMode"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.0225"
            android:text="PLAYBACK"
            android:paddingLeft="10dip"
            android:gravity="right" 
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewFile"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="/filepath/filename"
            android:gravity="left" 
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTotalDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.0225"
            android:text="Distance"
            android:paddingLeft="10dip"
            android:gravity="right" 
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewTotalDistance"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="12,345"
            android:gravity="left" 
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dip" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:orientation="horizontal" >
        
        <Button
            android:id="@+id/buttonExit"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
			android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="EXIT" />

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
			android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SETTINGS" />
        
    </LinearLayout>
    
</LinearLayout>